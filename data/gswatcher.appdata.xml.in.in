<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>@app_id@.desktop</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0-or-later</project_license>
  <developer_name>Alexander Burobin</developer_name>
  <launchable type="desktop-id">@app_id@.desktop</launchable>
  <name>@app_name@</name>
  <summary>@app_summary@</summary>
  <description>
    <p>Game Server Watcher is a simple application that helps you to watch
       the state of your favorite game servers and control remotely the servers of
       your own. It also has a buddy list and can notify you if a buddy joins any of
       servers.</p>
    <p>Features:</p>
    <ul>
      <li>Server list</li>
      <li>Buddy list</li>
      <li>Notifications when your buddy is on a server</li>
      <li>Multiple query protocols</li>
      <li>Remote console (Source only)</li>
    </ul>
  </description>

  <url type="homepage">@app_homepage@</url>
  <url type="bugtracker">@app_bugtracker@</url>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <screenshots>
    <screenshot type="default">
      <caption>Server list with server info and player list</caption>
      <image>https://raw.githubusercontent.com/lxndr/gswatcher/v@app_version@/docs/screenshots/01.png</image>
    </screenshot>
    <screenshot>
      <caption>Remote console panel</caption>
      <image>https://raw.githubusercontent.com/lxndr/gswatcher/v@app_version@/docs/screenshots/02.png</image>
    </screenshot>
  </screenshots>

  <translation type="gettext">@app_id@</translation>

  <releases>
    <release version="1.6.6" date="2023-10-08">
      <description>
        <p>This release is meant to prepare for FlatHub release.</p>
        <ul>
          <li>Uses country icons from iso-flag-png package</li>
          <li>Updates screenshots</li>
          <li>Changes app id to io.github.lxndr.gswatcher</li>
        </ul>
      </description>
      <url>https://github.com/lxndr/gswatcher/releases/tag/v1.6.6</url>
    </release>
    <release version="1.6.5" date="2023-10-08">
    <description>
        <p>This release restores more protocols after v1.6 re-write.</p>
        <ul>
          <li>Adds a few new game definitions</li>
          <li>Adds ase, gamespy, quake2 and quake3 protocols</li>
          <li>Fixes displaying address if server name is unknown</li>
          <li>Adds initial localization support</li>
          <li>Adds appdata file</li>
          <li>Stores protocol-id and game-id to reuse them on launch</li>
        </ul>
      </description>
      <url>https://github.com/lxndr/gswatcher/releases/tag/v1.6.5</url>
    </release>
    <release version="1.6.4" date="2023-10-05"/>
  </releases>

  <content_rating type="oars-1.1"/>
</component>
